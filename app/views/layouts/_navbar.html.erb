<ul id="dropdown1" class="dropdown-content">
  <%= render 'devise/menu/registration_items' %>
  <%= render 'devise/menu/login_items' %>
  <li class="divider"></li>
</ul>
<nav class="white" id="nav">
  <div class="nav-wrapper container">
    <%= link_to "Logo", root_path, class: "brand-logo" %>
    <a href="#" data-activates="mobile-drop" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      <!-- Dropdown Trigger -->
      <li>
        <a class="dropdown-button" data-activates="dropdown1">
          <i class="material-icons left">perm_identity</i>
            <% if user_signed_in? %>
              <%= current_user.first_name  %>
            <% else %>
              Guest
            <% end %>
          <i class="material-icons right">arrow_drop_down</i>
        </a>
      </li>
    </ul>
    <ul class="side-nav" id="mobile-drop">
      <% if user_signed_in? %>
        <li><%= link_to "Dashboard", root_path %><li>
        <li><%= link_to "Campaigns", campaigns_path %></li>
        <li><%= link_to "Templates", templates_path %></li>
        <li><%= link_to "Lists", root_path %></li>
        <li class="divider"></li>
      <% end %>
      <%= render 'devise/menu/registration_items' %>
      <%= render 'devise/menu/login_items' %>
    </ul>
  </div>
</nav>