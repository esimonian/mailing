<%= simple_form_for @list do |f| %>

  <div class="input-field">
    <%= f.input :title %>
  </div>

  <%= f.association :contacts,
                    as: :check_boxes,
                    label_method: :first_name,
                    :label => "Select some contacts",
                    :wrapper => :inline_checkbox

  %>

  <div class="input-field">
    <%= f.button :submit, class: "waves-effect waves-light teal lighten-1" %>
  </div>
<% end %>