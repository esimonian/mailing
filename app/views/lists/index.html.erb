<h1>Lists</h1>

<div class="row">
  <div class="col s12 m6">
    <% @lists.each do |list| %>
      <div class="card">
        <div class="card-content">
          <p> <%= list.title%></p>
        </div>
        <div class="card-action">
          <%= link_to edit_list_path(list) do %>
            <i class="material-icons teal-text lighten-1">mode_edit</i>
          <% end %>
          <%= link_to list, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons red-text right">delete</i>
          <% end %>
        </div>
      </div>
      <% end %>
  </div>
</div>


<%= link_to 'New List', new_list_path %>