<h2>Welcome to Your Dashboard</h2>

<% if current_user.admin %>
  <div class="square-wrapper">
    <div class="square-icon">
      <%= link_to campaigns_path do %>
        <i class="medium material-icons">markunread_mailbox</i>
        Manage Campaigns
      <% end %>
    </div>
  </div>
<% else %>
  <div class="square-wrapper">
    <div class="square-icon">
      <%= link_to new_campaign_path do %>
        <i class="medium material-icons">markunread_mailbox</i>
        Create Campaign
      <% end %>
    </div>
    <div class="square-icon">
      <%= link_to new_template_path do %>
        <i class="medium material-icons">web</i>
        Create Template
      <% end %>
    </div>
    <div class="square-icon">
      <%= link_to new_list_path do %>
        <i class="medium material-icons">view_list</i>
        Create List
      <% end %>
    </div>
  </div>
<% end %>

