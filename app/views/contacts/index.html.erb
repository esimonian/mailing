<h1>Contacts</h1>

<table id="table_container" >
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>

  <% @contacts.each do |contact| %>
      <tr>
        <td data-label="First Name"><%= best_in_place contact, :first_name, :as => :input %></td>
        <td data-label="Last Name"><%= best_in_place contact, :last_name, :as => :input %></td>
        <td data-label="Email"><%= best_in_place contact, :email, :as => :input %></td>
        <td data-label="Address">
          <%= contact.address_formatted_address %>
        </td>
        <td>
          <%= link_to edit_contact_path(contact) do %>
            <i class="material-icons teal-text lighten-1">mode_edit</i>
          <% end %>
        </td>
      </tr>
  <% end %>
    
  </tbody>
</table>

<%#= content_tag :div,
  id: "table_container",
  data: {
    contacts: @contacts
}.to_json do %>


<p>
  <%= link_to 'New contact', new_contact_path, class: "btn waves-effect waves-light teal lighten-1" %>
</p>
