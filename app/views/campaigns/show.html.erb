<div class="show-spacer">
  
</div>

<div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-image">
          <span class="card-half-image">
            
          </span>
          <% if @campaign.draft? %>
            <%= link_to(publish_campaign_path(@campaign), :class => "btn-floating halfway-fab waves-effect waves-light teal lighten-1", :method => :patch, remote: true, :confirm => "Sure?") do %>     
                <i class="material-icons" id="campaign-icon">send</i>
            <% end %>
          <% else %>
              <button disabled class="btn-floating halfway-fab waves-effect waves-light teal lighten-1">
                <i class="material-icons" id="campaign-icon">done</i>
              </button>
          <% end %>

          <div>
            
          </div>
        </div>
        <div class="card-content">
          <div class="row show-image-row">
            <div class="col s9 m6 show-image">
              <%= image_tag @campaign.template.image.url(:large), id: "show-image" %>
            </div>
            <div class="col m6">
              <h3><%= @campaign.title %></h3>
              <p class="flow-text">
                <strong>Status:</strong>
                <%= @campaign.status %>
              </p>
              <p class="flow-text">
                <strong>Template:</strong>
                  <%= @campaign.template.name %>
              </p>

            </div>
          </div>
          <div class="row">
            <div class="col 12 show-details">
              <p class="flow-text"><%= @campaign.description %></p>
              <ul class="flow-text">
                <li><strong>Lists:</strong></li>
                <% @campaign.lists.each do |list| %>
                  <li><%= link_to list.title, list_path(list) %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-action">
          <% if current_user.admin %>
            <%= link_to edit_campaign_path(@campaign) do %>
              <i class="material-icons teal-text lighten-1">print</i>
            <% end %>
            <%= link_to @campaign, method: :delete, data: { confirm: 'Publish this campaign?' } do %>
              <i class="material-icons red-text right">not_interested</i>
            <% end %>
          <% else %>
            <%= link_to edit_campaign_path(@campaign) do %>
              <i class="material-icons teal-text lighten-1">mode_edit</i>
            <% end %>
            <%= link_to @campaign, method: :delete, data: { confirm: 'Publish this campaign?' } do %>
              <i class="material-icons red-text right">delete</i>
            <% end %>
          <% end %>
          
        </div>
      </div>    
      </div>
    </div>
  </div>
