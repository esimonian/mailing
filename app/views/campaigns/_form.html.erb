<%= simple_form_for @campaign do |form| %>
  <% if campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :campaign_title %>
  </div>

  <div class="input-field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :campaign_description %>
  </div>
  <p>
    <label for="template_id">Please select a Template</label><br>
    <%= form.collection_radio_buttons :template_id, @templates, :id, 
          :name, :prompt => "Select a Template" %>
  </p>
  <p>
    <label for="list_id">Please select a List </label><br>
    <%= form.collection_check_boxes :list_ids, @lists, :id, 
          :title, :prompt => "Select a List", :wrapper => :inline_checkbox %>
  </p>
  


  <div class="actions">
    <%= form.button :submit, class: "waves-effect waves-light teal lighten-1" %>
  </div>
<% end %>
