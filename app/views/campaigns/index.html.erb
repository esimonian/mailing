<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.title %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.status %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to template, method: :publish, class: "btn-floating halfway-fab waves-effect waves-light teal lighten-1 ", data: { confirm: 'Are you sure?' } do %>
            <i class="material-icons">done</i>
          <% end %>
<br>

<%= link_to 'New Campaign', new_campaign_path %>
